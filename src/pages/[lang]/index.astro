---
import { languages } from '../../i18n/locales';
import SEOHead from '../../components/SEOHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  return Object.keys(languages).filter(l => l !== 'en').map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
let translations;
try { translations = await import(`../../i18n/${lang}.json`); } 
catch (e) { translations = await import(`../../i18n/en.json`); }
const t = translations.default || translations;
---

<html lang={lang} class="scroll-smooth">
  <head>
    <SEOHead title={t.seo.title} description={t.seo.description} lang={lang} />
  </head>
  <body class="bg-white text-gray-900 font-sans antialiased selection:bg-yellow-200 selection:text-black">
    
    <Header lang={lang} t={t} />

    <main>
      <section class="relative pt-24 pb-32 overflow-hidden">
        <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-yellow-100/40 via-white to-white"></div>
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-yellow-200/20 blur-[100px] rounded-full -z-10"></div>

        <div class="max-w-7xl mx-auto px-6 text-center">
          <div class="inline-flex items-center px-4 py-1.5 rounded-full bg-yellow-50 border border-yellow-200 text-yellow-700 text-sm font-bold mb-8 animate-fade-in-up">
            üöÄ New Release: Seedance 2.0
          </div>
          
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-black tracking-tight text-gray-900 mb-8 leading-[1.1]">
            {t.hero.title} <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-orange-600 drop-shadow-sm">
              {t.hero.highlight}
            </span>
          </h1>
          
          <p class="max-w-2xl mx-auto text-xl md:text-2xl text-gray-600 mb-12 leading-relaxed">
            {t.hero.subtitle}
          </p>
          
          <div class="flex flex-col sm:flex-row justify-center items-center gap-6">
            <a href="#" class="w-full sm:w-auto px-10 py-4 bg-black text-white rounded-full font-bold text-lg hover:bg-gray-800 hover:scale-105 transition-all shadow-xl hover:shadow-yellow-500/20">
              {t.hero.button}
            </a>
            <p class="text-sm font-semibold text-gray-500 flex items-center gap-2">
              <span class="flex h-3 w-3 relative">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
              </span>
              {t.hero.users}
            </p>
          </div>

          <div class="mt-20 p-2 bg-gray-900/5 rounded-3xl backdrop-blur-sm max-w-5xl mx-auto">
             <div class="rounded-2xl border-4 border-white shadow-2xl overflow-hidden aspect-[16/9] bg-gray-900 relative group">
                <div class="absolute inset-0 flex items-center justify-center">
                   <span class="text-gray-500 font-medium">Interactive Demo Interface (Placeholder)</span>
                   </div>
                <div class="absolute bottom-8 left-8 right-8 md:right-auto md:w-96 bg-white/90 backdrop-blur p-4 rounded-xl shadow-lg border border-white/20">
                   <div class="flex gap-2 mb-2">
                      <div class="w-2 h-2 rounded-full bg-red-500"></div>
                      <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
                      <div class="w-2 h-2 rounded-full bg-green-500"></div>
                   </div>
                   <div class="text-sm font-mono text-gray-600">"Cinematic drone shot of a futuristic city at sunset, 4k, smooth motion..."</div>
                </div>
             </div>
          </div>
        </div>
      </section>

      <section class="border-y border-gray-100 bg-gray-50/50 py-16">
         <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8 text-center divide-y md:divide-y-0 md:divide-x divide-gray-200">
            {t.stats && t.stats.map((stat: any) => (
              <div class="pt-4 md:pt-0">
                <div class="text-4xl md:text-5xl font-black text-gray-900 mb-2">{stat.value}</div>
                <div class="text-gray-500 font-bold uppercase tracking-wider text-sm">{stat.label}</div>
              </div>
            ))}
         </div>
      </section>

      <!-- Text to Video Section -->
      <section id="text-to-video" class="py-24 bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto px-6">
          <div class="flex flex-col md:flex-row items-center gap-16">
            <div class="md:w-1/2">
              <div class="inline-flex items-center px-3 py-1 rounded-full bg-purple-100 text-purple-700 text-xs font-bold mb-6 uppercase tracking-wider">
                Flagship Model
              </div>
              <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">
                {t.product_features?.text_to_video?.title || "Text to Video AI"}
              </h2>
              <p class="text-xl text-gray-500 mb-8 leading-relaxed">
                {t.product_features?.text_to_video?.desc || "Describe scenes, characters and camera moves in natural language."}
              </p>
              <ul class="space-y-4 mb-8">
                <li class="flex items-center gap-3 text-gray-700 font-medium">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Cinematic Camera Control
                </li>
                <li class="flex items-center gap-3 text-gray-700 font-medium">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Multi-Shot Consistency
                </li>
                <li class="flex items-center gap-3 text-gray-700 font-medium">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Physics-Based Motion
                </li>
              </ul>
              <a href="#" class="inline-flex items-center justify-center px-8 py-3 bg-black text-white rounded-full font-bold hover:bg-gray-800 transition-all group">
                Create Video
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
            </div>
            <div class="md:w-1/2 relative">
              <div class="absolute inset-0 bg-gradient-to-tr from-purple-200 to-pink-200 rounded-3xl blur-2xl opacity-50 -z-10 transform rotate-3"></div>
              <div class="bg-gray-900 rounded-3xl overflow-hidden shadow-2xl aspect-video relative group border border-gray-800">
                <div class="absolute inset-0 flex items-center justify-center bg-black/50 group-hover:bg-black/30 transition-all">
                   <div class="w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform cursor-pointer">
                      <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                   </div>
                </div>
                <div class="absolute bottom-4 left-4 right-4 bg-black/60 backdrop-blur p-3 rounded-xl border border-white/10">
                  <p class="text-xs text-gray-300 font-mono">Prompt: "Cyberpunk street market, neon lights, rain reflections, 4k..."</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Image to Video Section -->
      <section id="image-to-video" class="py-24 bg-gray-50 overflow-hidden">
        <div class="max-w-7xl mx-auto px-6">
          <div class="flex flex-col md:flex-row-reverse items-center gap-16">
            <div class="md:w-1/2">
              <div class="inline-flex items-center px-3 py-1 rounded-full bg-blue-100 text-blue-700 text-xs font-bold mb-6 uppercase tracking-wider">
                Static to Motion
              </div>
              <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">
                {t.product_features?.image_to_video?.title || "Image to Video AI"}
              </h2>
              <p class="text-xl text-gray-500 mb-8 leading-relaxed">
                {t.product_features?.image_to_video?.desc || "Animate your photos with incredible realism."}
              </p>
              <ul class="space-y-4 mb-8">
                 <li class="flex items-center gap-3 text-gray-700 font-medium">
                  <svg class="w-5 h-5 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Preserve Subject Identity
                </li>
                <li class="flex items-center gap-3 text-gray-700 font-medium">
                  <svg class="w-5 h-5 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Control Motion Strength
                </li>
              </ul>
              <a href="#" class="inline-flex items-center justify-center px-8 py-3 bg-white text-black border border-gray-200 rounded-full font-bold hover:bg-gray-100 transition-all group shadow-sm">
                Animate Image
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
            </div>
            <div class="md:w-1/2 relative">
               <div class="grid grid-cols-2 gap-4">
                  <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:-translate-y-1 transition-transform duration-300">
                    <div class="aspect-[4/5] bg-gray-200 relative">
                       <div class="absolute inset-0 flex items-center justify-center text-gray-400 font-medium">Original</div>
                    </div>
                  </div>
                  <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:-translate-y-1 transition-transform duration-300 mt-8">
                    <div class="aspect-[4/5] bg-gray-800 relative">
                       <div class="absolute inset-0 flex items-center justify-center text-white font-medium">
                          <svg class="w-12 h-12 opacity-80" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                       </div>
                    </div>
                  </div>
               </div>
            </div>
          </div>
        </div>
      </section>

      <!-- AI Tools Section -->
      <section id="ai-tools" class="py-24 bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto px-6">
          <div class="flex flex-col md:flex-row items-center gap-16">
            <div class="md:w-1/2">
              <div class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-700 text-xs font-bold mb-6 uppercase tracking-wider">
                Creative Suite
              </div>
              <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">
                {t.product_features?.ai_tools?.title || "AI Video Effects"}
              </h2>
              <p class="text-xl text-gray-500 mb-8 leading-relaxed">
                {t.product_features?.ai_tools?.desc || "Instant professional effects with one click."}
              </p>
              <div class="grid grid-cols-2 gap-4 mb-8">
                <div class="p-4 bg-gray-50 rounded-2xl border border-gray-100 hover:border-yellow-300 transition-colors">
                   <h4 class="font-bold text-gray-900 mb-1">Face Swap</h4>
                   <p class="text-sm text-gray-500">Perfect for memes & marketing</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-2xl border border-gray-100 hover:border-yellow-300 transition-colors">
                   <h4 class="font-bold text-gray-900 mb-1">Style Transfer</h4>
                   <p class="text-sm text-gray-500">Anime, Clay, 3D Render...</p>
                </div>
              </div>
              <a href="#" class="inline-flex items-center justify-center px-8 py-3 bg-black text-white rounded-full font-bold hover:bg-gray-800 transition-all group">
                Explore Tools
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
            </div>
            <div class="md:w-1/2">
               <div class="bg-gray-100 rounded-3xl p-8 border border-gray-200">
                  <div class="grid grid-cols-2 gap-4">
                     <div class="aspect-square bg-white rounded-xl shadow-sm p-4 flex flex-col items-center justify-center text-center">
                        <div class="w-12 h-12 bg-yellow-100 rounded-full mb-3 flex items-center justify-center text-yellow-600">‚ú®</div>
                        <span class="font-bold text-sm">Magic Edit</span>
                     </div>
                     <div class="aspect-square bg-white rounded-xl shadow-sm p-4 flex flex-col items-center justify-center text-center">
                        <div class="w-12 h-12 bg-blue-100 rounded-full mb-3 flex items-center justify-center text-blue-600">üé≠</div>
                        <span class="font-bold text-sm">Face Swap</span>
                     </div>
                     <div class="aspect-square bg-white rounded-xl shadow-sm p-4 flex flex-col items-center justify-center text-center">
                        <div class="w-12 h-12 bg-purple-100 rounded-full mb-3 flex items-center justify-center text-purple-600">üé®</div>
                        <span class="font-bold text-sm">Restyle</span>
                     </div>
                     <div class="aspect-square bg-white rounded-xl shadow-sm p-4 flex flex-col items-center justify-center text-center">
                        <div class="w-12 h-12 bg-green-100 rounded-full mb-3 flex items-center justify-center text-green-600">üîç</div>
                        <span class="font-bold text-sm">Upscale</span>
                     </div>
                  </div>
               </div>
            </div>
          </div>
        </div>
      </section>

      <section class="py-32 bg-white">
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-20 max-w-3xl mx-auto">
            <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">{t.features.title}</h2>
            <p class="text-xl text-gray-500">{t.features.subtitle}</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
            {t.features.list.map((feature: any, i: number) => (
              <div class="group p-10 rounded-[2rem] bg-gray-50 border border-gray-100 hover:border-yellow-300 hover:shadow-xl hover:shadow-yellow-100/50 transition-all duration-300">
                <div class="w-14 h-14 rounded-2xl bg-yellow-100 flex items-center justify-center text-yellow-600 mb-6 group-hover:scale-110 transition-transform">
                  {i === 0 && <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>}
                  {i === 1 && <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" /></svg>}
                  {i === 2 && <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>}
                  {i === 3 && <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>}
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{feature.title}</h3>
                <p class="text-gray-600 text-lg leading-relaxed">{feature.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="py-32 bg-black text-white rounded-t-[3rem] -mt-10 relative z-10">
        <div class="max-w-5xl mx-auto px-6">
          <h2 class="text-4xl md:text-5xl font-black text-center mb-16">{t.comparison.title}</h2>
          
          <div class="overflow-x-auto">
             {t.comparison.rows.map((row: any) => (
               <div class="grid grid-cols-3 py-6 border-b border-gray-100 last:border-0 hover:bg-gray-50 transition-colors px-4 -mx-4">
                 <div class="text-gray-900 font-bold">{row.label}</div>
                 <div class="text-green-600 font-bold">{row.us}</div>
                 <div class="text-gray-400">{row.others}</div>
               </div>
             ))}
          </div>
        </div>
      </section>

      <section class="py-32 bg-white">
        <div class="max-w-7xl mx-auto px-6">
          <h2 class="text-4xl font-black text-center mb-20">{t.showcase.title}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {t.showcase.items.map((item: any, i: number) => (
              <div class="group relative aspect-[3/4] rounded-2xl overflow-hidden cursor-pointer">
                <div class={`absolute inset-0 bg-gray-200 transition-transform duration-700 group-hover:scale-110 ${i % 2 === 0 ? 'bg-gray-800' : 'bg-gray-700'}`}>
                  <!-- Placeholder for image -->
                  <div class="absolute inset-0 opacity-20 bg-[url('https://source.unsplash.com/random/400x600?tech')] bg-cover bg-center"></div>
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent"></div>
                
                <div class="absolute bottom-0 left-0 p-6 w-full">
                  <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
                  <p class="text-sm text-gray-300 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 delay-75">{item.desc}</p>
                  <div class="h-1 w-0 bg-yellow-500 mt-4 group-hover:w-full transition-all duration-500"></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="py-24 bg-yellow-50">
        <div class="max-w-7xl mx-auto px-6">
          <h2 class="text-4xl font-black text-center mb-16">{t.testimonials.title}</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {t.testimonials.list.map((item: any) => (
              <div class="bg-gray-50 p-8 rounded-3xl border border-gray-100 relative">
                 <svg class="w-10 h-10 text-yellow-300 absolute top-6 left-6 -z-0" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21L14.017 18C14.017 16.896 14.389 16.03 15.133 15.401C15.877 14.773 16.924 14.459 18.274 14.459L18.736 14.459L18.736 11.459L18.064 11.459C16.974 11.459 15.897 11.085 14.833 10.338C13.769 9.591 13.044 8.528 12.658 7.149L12.5 6.5L15.5 6.5L15.659 7.426C15.877 8.653 16.38 9.576 17.169 10.194C17.958 10.812 19.096 11.121 20.582 11.121L21 11.121L21 21L14.017 21ZM5.01699 21L5.01699 18C5.01699 16.896 5.389 16.03 6.13299 15.401C6.87699 14.773 7.92399 14.459 9.27399 14.459L9.73599 14.459L9.73599 11.459L9.06399 11.459C7.97399 11.459 6.89699 11.085 5.83299 10.338C4.76899 9.591 4.04399 8.528 3.65799 7.149L3.49999 6.5L6.49999 6.5L6.65899 7.426C6.87699 8.653 7.37999 9.576 8.16899 10.194C8.95799 10.812 10.096 11.121 11.582 11.121L12 11.121L12 21L5.01699 21Z" /></svg>
                 <p class="text-gray-700 italic mb-6 relative z-10">"{item.review}"</p>
                 <div class="flex items-center gap-4">
                   <div class="w-10 h-10 rounded-full bg-gray-300"></div>
                   <div>
                     <div class="font-bold text-gray-900">{item.author}</div>
                     <div class="text-sm text-gray-500">{item.role}</div>
                   </div>
                 </div>
               </div>
            ))}
          </div>
        </div>
      </section>

      <section class="py-32 bg-white max-w-4xl mx-auto px-6" itemscope itemtype="https://schema.org/FAQPage">
        <h2 class="text-4xl font-black text-center mb-16">{t.faq.title}</h2>
        <div class="space-y-4">
          {t.faq.items.map((item: any) => (
            <details class="group bg-gray-50 rounded-2xl border border-gray-100 overflow-hidden" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
              <summary class="flex justify-between items-center font-bold cursor-pointer list-none p-6 text-lg text-gray-900 hover:bg-gray-100 transition-colors select-none">
                <span itemprop="name">{item.q}</span>
                <span class="transition-transform duration-300 group-open:rotate-180 text-yellow-500">
                  <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                </span>
              </summary>
              <div class="text-gray-600 px-6 pb-6 pt-0 leading-relaxed animate-fade-in" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                <div itemprop="text">{item.a}</div>
              </div>
            </details>
          ))}
        </div>
      </section>

    </main>
    <Footer t={t} />
  </body>
</html>